{
  "name": "@denlay/inventory",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@denlay/core": "^1.0.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "cote": "^1.0.0",
    "dotenv": "^8.2.0",
    "fastify": "^3.9.2",
    "fastify-cors": "^4.1.0",
    "fastify-plugin": "^3.0.0",
    "fastify-swagger": "^3.5.0",
    "pg": "^8.4.2",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.29"
  },
  "scripts": {
    "start": "yarn ts-node -r tsconfig-paths/register -P ./tsconfig.json ../../cmd/inventory/index",
    "typeorm:sync": "ts-node -P ./tsconfig.json ../../node_modules/typeorm/cli.js schema:sync",
    "test": "yarn jest --detectOpenHandles"
  },
  "devDependencies": {
    "@types/cote": "^0.19.0",
    "@types/dotenv": "^8.2.0",
    "@types/faker": "^5.1.4",
    "@types/jest": "^26.0.15",
    "@types/json-schema": "^7.0.6",
    "@types/node": "^14.14.6",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "faker": "^5.1.0",
    "jest": "^26.6.3",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.3",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "^__stubs__": "<rootDir>/__stubs__/index.ts",
      "^__mocks__": "<rootDir>/__mocks__/index.ts"
    },
    "rootDir": "./tests",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
